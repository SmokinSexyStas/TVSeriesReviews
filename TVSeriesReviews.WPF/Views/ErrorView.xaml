<UserControl x:Class="TVSeriesReviews.WPF.Views.ErrorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVSeriesReviews.WPF.Views"
             xmlns:vm="clr-namespace:TVSeriesReviews.WPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="#3D445E">
        <TextBlock Text="{Binding ErrorText}" FontSize="26" FontFamily="Inter" Foreground="#D1D8E2" Margin="20"/>
    </StackPanel>
</UserControl>
